<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detailed_Content">
    <com.ssomai.android.scalablelayout.ScalableLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        app:scale_base_height="1920"


        app:scale_base_width="1080"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="150dp">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:scale_height="450"

            app:scale_left="300"

            app:scale_textsize="60"
            app:scale_top="40"

            app:scale_width="450"
            tools:ignore="MissingPrefix"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="제목"
            app:layout_constraintTop_toBottomOf="@id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            app:scale_height="50"

            app:scale_left="80"

            app:scale_textsize="30"
            app:scale_top="600"

            app:scale_width="80"
            tools:ignore="MissingPrefix"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintBottom_toTopOf="@id/text"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="32dp"
            app:scale_height="50"

            app:scale_left="200"

            app:scale_textsize="30"
            app:scale_top="600"

            app:scale_width="700"
            tools:ignore="MissingPrefix"/>
        <TextView
            android:id="@+id/chatid"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            app:scale_height="70"

            app:scale_left="150"

            app:scale_textsize="30"
            app:scale_top="1500"

            app:scale_width="500"
            tools:ignore="MissingPrefix"/>

        <RatingBar
            android:isIndicator="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingVote"
            android:numStars="5"
            android:rating="3"
            android:stepSize="0.25"
            app:layout_constraintTop_toBottomOf="@id/chatid"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:progressTint="@color/yellow"
            android:progressBackgroundTint="#41CDCD"



            app:scale_textsize="100"
            app:scale_height="150"
            app:scale_left="40"
            app:scale_top="1700"
            app:scale_width="1000"

            tools:ignore="MissingPrefix"/>
        <Button
            android:id="@+id/chatbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="30dp"
            android:text="채팅하기"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chatid"
            android:background="@drawable/button_background"
            android:layout_marginRight="30dp"
            app:scale_height="100"

            app:scale_left="750"

            app:scale_textsize="30"
            app:scale_top="1500"

            app:scale_width="200"
            tools:ignore="MissingPrefix"/>
        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="내용"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            app:scale_height="50"

            app:scale_left="80"

            app:scale_textsize="30"
            app:scale_top="680"

            app:scale_width="80"
            tools:ignore="MissingPrefix"/>
        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:background="@drawable/back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvText"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="32dp"
            app:scale_height="700"

            app:scale_left="200"

            app:scale_textsize="30"
            app:scale_top="680"

            app:scale_width="700"
            tools:ignore="MissingPrefix"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>