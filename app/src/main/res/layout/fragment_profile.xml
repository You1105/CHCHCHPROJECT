<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".tab.ProfileFragment">
    <com.ssomai.android.scalablelayout.ScalableLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        app:scale_base_height="1920"


        app:scale_base_width="1080"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="150dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="마이페이지"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#2196F3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"

            app:scale_textsize="80"
            app:scale_height="200"
            app:scale_left="200"
            app:scale_top="100"
            app:scale_width="700"

            tools:ignore="MissingPrefix" />
        <TextView
            android:id="@+id/tvimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이미지뷰를 클릭하여 프로필을 설정하세요."
            app:layout_constraintTop_toBottomOf="@id/ivUser"
            android:gravity="center"
            android:layout_marginTop="10dp"

            app:scale_textsize="50"
            app:scale_height="200"
            app:scale_left="300"
            app:scale_top="600"
            app:scale_width="500"

            tools:ignore="MissingPrefix" />
        <ImageView
            android:id="@+id/ivUser"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="#ECECEC"
            android:scaleType="fitXY"
            android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:scale_textsize="50"
            app:scale_height="300"
            app:scale_left="300"
            app:scale_top="300"
            app:scale_width="500"

            tools:ignore="MissingPrefix" />
        <Button
            android:id="@+id/mywriting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내가 작성한 글 목록 보기"
            android:gravity="left"
            android:padding="15dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toBottomOf="@+id/tvimage"
            android:layout_marginTop="50dp"

            app:scale_textsize="50"
            app:scale_height="200"
            app:scale_left="250"
            app:scale_top="900"
            app:scale_width="600"

            tools:ignore="MissingPrefix" />
        <Button
            android:id="@+id/buttonStar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내 별점 보기"
            android:background="@drawable/button"
            android:gravity="left"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@id/mywriting"

            app:scale_textsize="50"
            app:scale_height="200"
            app:scale_left="250"
            app:scale_top="1100"
            app:scale_width="600"

            tools:ignore="MissingPrefix"
            />
        <Button
            android:id="@+id/chatcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="채팅방 컬러 설정하기"
            android:gravity="left"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@id/buttonStar"

            app:scale_textsize="50"
            app:scale_height="200"
            app:scale_left="250"
            app:scale_top="1300"
            app:scale_width="600"
            tools:ignore="MissingPrefix"/>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:gravity="left"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@id/chatcolor"
            android:background="@drawable/button"
            app:scale_textsize="50"
            app:scale_height="200"
            app:scale_left="250"
            app:scale_top="1500"
            app:scale_width="600"
            tools:ignore="MissingPrefix"/>
        <ProgressBar
            android:id="@+id/pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:scale_height="150"


            app:scale_textsize="60"
            app:scale_top="350"

            app:scale_width="1100"
            tools:ignore="MissingPrefix"/>


    </com.ssomai.android.scalablelayout.ScalableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>