<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".tab.ProfileFragment">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#2196F3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/tvimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이미지뷰를 클릭하여 프로필을 설정하세요."
        app:layout_constraintTop_toBottomOf="@id/ivUser"
        android:gravity="center"
        android:layout_marginTop="10dp" />
    <ImageView
        android:id="@+id/ivUser"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="#ECECEC"
        android:scaleType="fitXY"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/mywriting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내가 작성한 글 목록 보기"
        android:gravity="left"
        android:padding="15dp"
        android:background="@drawable/button"
        app:layout_constraintTop_toBottomOf="@+id/tvimage"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/buttonStar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내 별점 보기"
        android:background="@drawable/button"
        android:gravity="left"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/mywriting"
        />
    <Button
        android:id="@+id/chatcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="채팅방 컬러 설정하기"
        android:gravity="left"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/buttonStar" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:gravity="left"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/chatcolor"
        android:background="@drawable/button"/>
    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>